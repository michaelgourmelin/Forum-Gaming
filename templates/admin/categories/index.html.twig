{% extends "base3.html.twig" %}

{% block title %}Liste des categories{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border-light bg-light bg-white p-2">
            <h1>Liste des categories</h1>

            <table class="table " data-bs-theme="light" >
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Parent</th>
                        <th>Slug</th>                    
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.id }}</td>
                        <td>{{ categorie.name }}</td>
                        <td>
                            {% if categorie.parent is not null %}
                            {{ categorie.parent.name }}
                            {% endif %}
                        </td>
                        <td>{{ categorie.slug }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </main>
    </div>
</div>
{% endblock %}