{% extends "base_add_theme.html.twig" %}

{% block title %} Ajouter un theme {% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1> Ajouter un theme :</h1>
            <div class="form">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.categories) }}
                <button type="submit" class="btn btn-warning btn-lg text-white">Valider</button>
                {{ form_end(form) }}
            </div>
        </div>
    </section>
</main>
{% endblock %}