<aside class="col-3 p-1 w-50">
  <article class="card mb-3 bg-dark">
    <div class="card-header text-warning">
      Utilisateur
    </div>
    <div class="card-body">
      <span class="w-auto text-white">{{ app.user.email }}</span>
      {% if app.user and app.user.isVerified == false %}
      <p><a class="link text-warning" href="{{ path('profile_send_email') }}">Confirmer mon email</a></p>
      {% endif %}
    </div>
    {% if app.user.userPicture is null %}
    <div class="card-body">
      <p><a class="link text-warning" href="{{ path('profile_picture') }}">Ajouter un avatar pour votre profil</a></p>
    </div>
    {% endif %}
    {% if app.user.userPicture is not null %}
    <div class="card-body">
      <p><a class="link text-warning" href="{{ path('profile_remove', {'id': app.user.userPicture.id}) }}">Supprimer
          votre avatar</a></p>
    </div>
    {% endif %}
  </article>
  <article class="card mb-3 bg-dark">
    <div class="card-header text-warning">
      Pseudo
    </div>
    <div class="card-body">
      <span class="w-auto text-white">{{ app.user.firstname }}</span>
    </div>
  </article>
  <article class="card mb-3 bg-dark">
    <div class="card-header text-warning">
      Commentaires
    </div>
    <div class="card-body">
      <p><a class="link" href="{{ path('profile_list') }}">Mes commentaires</a></p>
    </div>
  </article>
</aside>